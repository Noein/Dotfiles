[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	whitespace = trailing-space
	
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
	
[alias]
	c = commit -a
	cm = commit -am
	aa = add .
	co = checkout
	st = status
	ri = rebase -i
	amend = commit --amend -am
	force-merge = merge -X theirs
	delete-branch = "!f() { git branch -D $1 && git push origin :$1; }; f"
	l = "!git log --reverse --pretty=format:\"%h|%ar|%s\" | awk -F '|' '{ printf \"%s | %-14s | %s\\n\", $1, $2, $3 }'"
	la = "!git log --reverse --pretty=format:\"%h|%an|%ar|%s\" | awk -F '|' '{ printf \"%s | %-10s | %-14s | %s\\n\", $1, $2, $3, $4 }'"
	
[user]
	name = Noein
	email = noein93@gmail.com

[merge]
	ff = only
	commit = no

[branch]
	autosetupmerge = true
	
[diff]
	renames = copies
	
[push]
	default = upstream
	
[github]
	user = noein
	
[credential]
	helper = cache
	
[diff "word"]
	binary = true
	textconv = /usr/bin/antiword # catdoc, docx2txt, strings
	
[diff "odt"]
	binary = true
	textconv = /usr/bin/odt2txt

[diff "exif"]
	textconv = exiftool
